<?xml version="1.0"?>
	<robot name="nox">
		<link name="base_link" frame_id="base_link">
			
		</link>

		<link name="laser" frame_id="laser">
		</link>
		<link name="base_footprint" frame_id="base_footprint">
		</link>
		
		<joint name="base_footprint_to_base_link" type="fixed">
			<parent link="base_footprint"/>
			<child link="base_link"/>
			<origin xyz="0 0 0"/>
		</joint>	

		<joint name="base_link_to_laser" type="fixed">
			<parent link="base_link"/>
			<child link="laser"/>
			<origin xyz="0 0 0.3"/>
		</joint>	
		
	</robot>
